title.bg=#303030
title.bold=true

# used in setup and in 'From:' etc
header.bold=true
header.fg=purple

# decorative lines
border.fg=blue

# requires attention
*error.bold=true
*error.fg=red
*error.blink=true
*warning.fg=yellow
*warning.blink=true
*success.fg=green

# statusline
statusline_default.fg=gray
